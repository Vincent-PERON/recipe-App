<%- include('partials/header') %>

<main>
<h1 class="pb-4">Recherche</h1>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
    <% if(searchRecipe != '') { %>
        <% for(const r of searchRecipe) { %>
            <a href="/recipe/<%= r.id%>" class="col text-center category__link">
            <div class="category__img category__img--large shadow">
                <img src="/uploads/<%= r.picture %>" alt="<%= r.title %>" loading="lazy">
            </div>
            <div class="pt-1"><%= r.title %></div>
            </a>
        <% } %>
        <% } else { %>
            <p>No items found.</p>
    <% } %>
</div>

</main>

<%- include('partials/footer') %>