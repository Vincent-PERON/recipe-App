<%- include('partials/header') %>

    <main>

        <h1 class="pb-4">Categorie : <%- category.name %></h1>

        <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
            <% if(category != '') { %>
                <% for(const i of category.recipes) { %>
                    <a href="/recipe/<%= i.id %>" class="col text-center category__link">
                        <div class="category__img category__img--large shadow">
                            <img src="/uploads/<%= i.picture %>" alt="<%= i.title %>" loading="lazy">
                        </div>
                        <div class="pt-1"><%= i.title %></div>
                        </a>
                <% } %>
            <% } else { %>
                <p>No items found.</p>
            <% } %> 
        </div>


    </main>

<%- include('partials/footer') %>
